/* pages/test/test.wxss */

.aboutMe {
    width: 100%;
    height: 200rpx;
    background: #fff;
    border: 1px xolid red;
    display: flex;
    align-items: center;
    padding: 0 50rpx;
    box-sizing: border-box;
}

.aboutMe .picture {
    width: 120rpx;
    height: 120rpx;
    margin-right: 30rpx;
    overflow: hidden;
    border-radius: 100%;
}

.aboutMe .introduce {
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
}

.aboutMe .introduce navigator {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #f6705a;
}

.aboutMe>button {
    font-size: 28rpx;
    position: absolute;
    right: 5%;
    padding: 0;
    width: 120rpx;
    background: transparent;
    color: #f6705a;
    min-height: 20rpx;
}

.aboutMe>button::after {
    border: none;
}

.nav {
    padding: 20rpx 0;
    display: flex;
    width: 100%;
    background: #fff;
    margin-top: 20rpx;
    justify-content: center;
    align-items: center;
}

.nav view {
    text-align: center;
    position: relative;
    margin: 0 40rpx;
}

.active::after {
    content: '';
    display: block;
    width: 100rpx;
    height: 10rpx;
    position: absolute;
    left: 50%;
    bottom: -30%;
    transform: translate(-50%, -50%);
    background: #fa9a8b;
    border-radius: 30rpx;
}

.content {
    background: #fff;
    padding: 50rpx;
    margin: 30rpx;
    border-radius: 30rpx;
}

.content .detail {
    display: flex;
    align-items: center;
    flex-direction: row;
    margin: 10px 0;
    border-bottom: 1px solid #ccc;
    font-size: 13px;
}

.time {
    margin-right: 40rpx;
}

.describe {
    margin-top: 20rpx;
}
