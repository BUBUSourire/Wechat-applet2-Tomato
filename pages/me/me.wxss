/* pages/test/test.wxss */

.aboutMe {
    width: 100%;
    height: 200rpx;
    background: #fff;
    border: 1px xolid red;
    display: flex;
    align-items: center;
    padding: 0 50rpx;
    box-sizing: border-box;
}

.aboutMe image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 30rpx;
}

.aboutMe .introduce {
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
}

.special {
    font-size: 36rpx;
    text-align: center;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 1) 49%, rgba(255, 234, 226, 1) 52%, rgba(255, 220, 207, 1) 100%);
}

.aboutMe .introduce text:nth-child(2) {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #f6705a;
}

.aboutMe>button {
    font-size: 28rpx;
    position: absolute;
    right: 5%;
    padding: 0;
    width: 120rpx;
    background: transparent;
    color: #f6705a;
    min-height: 20rpx;
}

.aboutMe>button::after {
    border: none;
}

.nav {
    padding: 20rpx 0;
    display: flex;
    width: 100%;
    background: #fff;
    margin-top: 20rpx;
    justify-content: center;
    align-items: center;
}

.nav view {
    text-align: center;
    position: relative;
    margin: 0 40rpx;
}

.active::after {
    content: '';
    display: block;
    width: 100rpx;
    height: 10rpx;
    position: absolute;
    left: 50%;
    bottom: -30%;
    transform: translate(-50%,-50%);
    background: #fa9a8b;
    border-radius: 30rpx;
}

.content {
    width: 90%;
    background: #fff;
    padding: 50rpx;
    margin-top: 20rpx;
}

.content .detail {
    display: flex;
    align-items: center;
    flex-direction: row;
}

.time {
    margin-right: 40rpx;
}

.describe {
    margin-top: 20rpx;
}
