/* pages/test/test.wxss */

.aboutMe {
    width: 100%;
    height: 200rpx;
    background: #fff;
    border: 1px xolid red;
    display: flex;
    align-items: center;
    padding: 0 50rpx;
}

.aboutMe image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 30rpx;
}

.aboutMe .introduce {
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
}

.special {
    font-size: 36rpx;
    text-align: center;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 1) 49%, rgba(255, 234, 226, 1) 52%, rgba(255, 220, 207, 1) 100%);
}

.aboutMe .introduce text:nth-child(2) {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #F6705A;
}

.aboutMe>text {
    font-size: 28rpx;
    position: absolute;
    right: 5%;
}

.nav {
    padding: 20rpx 0;
    display: flex;
    width: 100%;
    background: #fff;
    margin-top: 20rpx;
}

.nav view {
    text-align: center;
    width: 50%;
    position: relative;
}

.active{
    border-bottom: 8rpx solid rgb(245, 153, 138);
}

.content {
    width: 90%;
    background: #fff;
    padding: 50rpx;
    margin-top: 20rpx;
}

.content .detail {
    display: flex;
    align-items: center;
    flex-direction: row;
}

.time {
    margin-right: 40rpx;
}
