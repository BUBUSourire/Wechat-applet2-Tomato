page {
    background: #fff;
}

.login {
    background: url(https://i.ibb.co/WxQ7TqN/bg.png) center repeat;
    box-shadow: -2px 2px 47px 0px rgba(255, 255, 255, 1) inset;
    background-size: cover;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.login image {
    width: 240rpx;
    height: 240rpx;
    border-radius: 50%;
    border: 15rpx solid #FE996F;
    margin-top: -20%;
    box-shadow: -2px 7px 27px -9px rgba(89,87,89,0.5);
}

.login .name {
    color: #F6705A;
    margin: 20rpx 0;
}

.login .line {
    width: 200rpx;
    height: 2rpx;
    background: #FE996F;
}

.login button {
    width: 360rpx !important;
    height: 80rpx;
    border-radius: 16rpx;
    color: #fff;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 60rpx 0;
    background: linear-gradient(to right,#EF9B75,#F6705A);
    box-shadow: 0px 11px 32px 0px rgba(246, 112, 90, 0.30);
}

.login .toBind {
    font-size: 28rpx;
    color: #F6705A;
}
