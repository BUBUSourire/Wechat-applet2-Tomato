<view class="home-container">
    <scroll-view class="todoList" scroll-y="true">
        <view class="item" wx:for="{{lists}}" wx:for-index="index" wx:key="{{item.id}}" bindtap="deleteTodo" data-index="{{index}}">
            <view class="select {{item.finished?'active':'default'}}"></view>
            <text>{{item.text}}</text>
        </view>
    </scroll-view>
</view>

<view class="component">
    <view class="clock">
        <g-clock text="点击开始闹钟"></g-clock>
    </view>
    <view class="create">
        <g-button text="创建任务" type="change" size="mini" bindtap="showConfirm"></g-button>
    </view>
</view>


<g-confirm visible="{{visible}}" placeholder="我完成了什么" bindconfirm="confirm" bindcsncel="hideConfirm"></g-confirm>